<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculadora">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/caja"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:background="#000000"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif-black"
            android:inputType="none"
            android:textColor="#FFFFFF"
            android:textSize="60dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="80dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btdiv"
                    android:layout_width="100dp"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="raiz"
                    android:text="√"
                    android:textColor="#090CE7"

                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button36"
                    android:layout_width="99dp"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="potencia"
                    android:text="x²"
                    android:textColor="#090CE7"

                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button37"
                    android:layout_width="100dp"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="clear"
                    android:text="©"
                    android:textColor="#E70948"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button38"
                    android:layout_width="100dp"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="borrar"
                    android:text="DEL"
                    android:textColor="#E70948"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button39"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt7"
                    android:text="➐"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button40"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt8"
                    android:text="➑"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button41"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt9"
                    android:text="➒"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button42"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="suma"
                    android:text="+"
                    android:textColor="#090CE7"

                    android:textSize="40sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button43"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt4"
                    android:text="➍"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button44"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt5"
                    android:text="➎"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button45"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt6"
                    android:text="➏"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button46"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="resta"
                    android:text="-"
                    android:textColor="#090CE7"

                    android:textSize="40sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button47"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt1"
                    android:text="➊"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button48"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt2"
                    android:text="➋"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button49"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt3"
                    android:text="➌"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/button50"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="multiplicacion"
                    android:text="*"
                    android:textColor="#090CE7"

                    android:textSize="40sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button51"
                    android:layout_width="89dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="bt0"
                    android:text="0"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button52"
                    android:layout_width="91dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:onClick="btpunto"
                    android:text="."
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button53"
                    android:layout_width="89dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:text="()"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button54"
                    android:layout_width="89dp"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="division"
                    android:text="/"
                    android:textColor="#090CE7"

                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="sin"
                    android:text="SIN"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="cos"
                    android:text="COS"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="tan"
                    android:text="TAN"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="porcentaje"
                    android:text="%"
                    android:textColor="#090CE7"

                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="csc"
                    android:text="CSC"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="sec"
                    android:text="SEC"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="cgt"
                    android:text="CTG"
                    android:textColor="#09E72E"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#F44336"
                    android:onClick="off"
                    android:text="OFF"
                    android:textColor="#FAF7F6F6"
                    android:textSize="30dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="factorial"
                    android:text="x!"
                    android:textColor="#E77109"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:onClick="primo"
                    android:text="Pr"
                    android:textColor="#E77109"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#ffffff"
                    android:text="fn"
                    android:textColor="#E77109"
                    android:textSize="30dp" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:background="#0099FF"
                    android:onClick="igual"
                    android:text="="
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
